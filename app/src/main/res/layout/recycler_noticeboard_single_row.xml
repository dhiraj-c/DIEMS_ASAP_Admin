<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/imgNoticeImage"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1.5"
            android:padding="5dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5">

            <TextView
                android:id="@+id/txtNoticeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Notice Title"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtNoticeOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNoticeTitle"
                android:padding="8dp"
                android:text="Source of Origin"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnNoticeDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNoticeOrigin"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_download"
                android:text="Download"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>